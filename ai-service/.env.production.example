# ============================================
# AI Service Production Environment Variables
# Copy this file to .env.production and fill in your actual values
# ============================================

# ============================================
# Qdrant Vector Database
# ============================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=jvb_embeddings
QDRANT_API_KEY=

# ============================================
# Embedding Model Configuration
# ============================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DIMENSION=384

# ============================================
# Cohere API (for Embeddings)
# IMPORTANT: Get your API key from https://cohere.com
# ============================================
COHERE_API_KEY=your_cohere_api_key_here
COHERE_EMBEDDING_MODEL=embed-multilingual-v3.0
COHERE_VECTOR_DIMENSION=1024

# ============================================
# LLM Configuration
# ============================================
LLM_PROVIDER=groq
LLM_MODEL=llama-3.3-70b-versatile
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2048

# ============================================
# Groq API (for LLM)
# IMPORTANT: Get your API key from https://console.groq.com
# ============================================
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# OpenAI API (Alternative LLM Provider)
# ============================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# ============================================
# RAG Configuration
# ============================================
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.5
RAG_MAX_CONTEXT_LENGTH=4000

# ============================================
# API Settings
# ============================================
DEBUG=False
HOST=0.0.0.0
PORT=8001
