# ===========================================
# AI Service Environment Variables Template
# ===========================================

# Service Configuration
SERVICE_NAME=JVB AI Service
SERVICE_VERSION=2.0.0
HOST=0.0.0.0
PORT=8001
DEBUG=True

# Qdrant Configuration (Vector Database)
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=jvb_embeddings
QDRANT_API_KEY=

# ===========================================
# EMBEDDING MODEL - Cohere (Keep for embedding only)
# ===========================================
COHERE_API_KEY=your api key
COHERE_EMBEDDING_MODEL=embed-multilingual-v3.0
VECTOR_DIMENSION=1024

# ===========================================
# LLM MODELS - Multi-Provider Strategy
# ===========================================

# Google Gemini (FREE - Primary)
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE
GEMINI_FLASH_MODEL=gemini-1.5-flash-latest
GEMINI_PRO_MODEL=gemini-1.5-pro-latest

# Groq (FREE - Fallback)
GROQ_API_KEY=YOUR_GROQ_API_KEY_HERE
GROQ_LLAMA_MODEL=llama-3.3-70b-versatile

# OpenAI (OPTIONAL - Paid)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic (OPTIONAL - Paid)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ===========================================
# Model Selection Strategy
# ===========================================
# PRIMARY_PROVIDER: gemini, groq, openai, anthropic
PRIMARY_PROVIDER=gemini
FALLBACK_PROVIDER=groq

# Enable/Disable providers
ENABLE_GEMINI=true
ENABLE_GROQ=true
ENABLE_OPENAI=false
ENABLE_ANTHROPIC=false

# ===========================================
# RAG Configuration
# ===========================================
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.5
RAG_MAX_CONTEXT_LENGTH=8000
RAG_MIN_SCORE_THRESHOLD=0.3
RAG_ENABLE_FALLBACK=true

# Intent Classification
ENABLE_INTENT_CLASSIFICATION=true
ENABLE_DIRECT_CHAT=true  # Chat without documents

# ===========================================
# LLM Configuration
# ===========================================
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# Streaming (for future)
ENABLE_STREAMING=false

# ===========================================
# Chunking Configuration
# ===========================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=*

# ===========================================
# Rate Limiting (for future)
# ===========================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=30
